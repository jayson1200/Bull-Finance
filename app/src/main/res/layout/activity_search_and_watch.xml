<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_SearchandWatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchAndWatch">

    <ImageView
        android:id="@+id/Bull"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:contentDescription="@string/IDKmaybelater"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bull" />

    <ImageView
        android:id="@+id/NewsLinkImagebox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/IDKmaybelater"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ToSearchLayoutBtn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/curvedtopnewsrect" />

    <TextView
        android:id="@+id/watchlistText"
        android:layout_width="@dimen/_227sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/signika_negative_bold"
        android:text="Watchlist"
        android:textColor="#000000"
        android:textSize="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewsLinkImagebox"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bullFinanceTxt"
        android:layout_width="@dimen/_192sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/signika_negative_bold"
        android:text="Bull Finance"
        android:textColor="#000000"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Bull"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ToSearchLayoutBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/curvedsearchrect"
        android:ems="10"
        android:fontFamily="@font/signika_negative_bold"
        android:textColor="#525151"
        android:textCursorDrawable="@android:color/black"
        android:textSize="@dimen/_16sdp"
        app:iconifiedByDefault="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bullFinanceTxt" />

    <ImageView
        android:id="@+id/searchGlass_img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:backgroundTint="#050101"
        app:layout_constraintBottom_toBottomOf="@+id/ToSearchLayoutBtn"
        app:layout_constraintStart_toStartOf="@+id/ToSearchLayoutBtn"
        app:layout_constraintTop_toTopOf="@+id/ToSearchLayoutBtn"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable" />


</androidx.constraintlayout.widget.ConstraintLayout>